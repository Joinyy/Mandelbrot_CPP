{
  // See https://go.microsoft.com/fwlink/?LinkId=733558 
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "cl.exe build active file",
      "command": "C:\\Program Files (x86)\\Microsoft Visual Studio 14.0\\VC\\bin\\cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/Fe:",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "windows": {
        "options": {
          "env": {
            "INCLUDE": "${env:INCLUDE}${workspaceFolder}\\SFML\\include;"
            // "LIB": "${env:LIB}${workspaceFolder}\\SFML\\bin;"
          }
        },
        "command": "C:\\Program Files (x86)\\Microsoft Visual Studio 14.0\\VC\\bin\\cl.exe",
        "args": [
            "/EHsc",
            "/O2",
            "/MT",
            "/Zi",
            "/Fe:",
            "Mandelbrot.exe",
            "src\\CarthCoords.cpp",
            "src\\helper_functions.cpp",
            "src\\main.cpp",
            "src\\mandelbrot.cpp",
            "/link",
            "${workspaceFolder}\\SFML\\lib\\sfml-system.lib",
            "${workspaceFolder}\\SFML\\lib\\sfml-audio.lib",
            "${workspaceFolder}\\SFML\\lib\\sfml-window.lib",
            "${workspaceFolder}\\SFML\\lib\\sfml-graphics.lib"
        ]
      },
      "linux": {
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "command": "make",
        "args": [
          "all"
        ]
      },
      "label": "Build all files",
      "type": "shell",
      "group":  {
          "kind": "build",
          "isDefault": true
      },
      "presentation": {
          "reveal":"always"
      },
      "problemMatcher": "$msCompile"
    }
  ]
}